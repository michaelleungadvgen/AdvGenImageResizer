<Window x:Class="AdvGenImageResizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdvGen Image Resizer" 
        Height="800" 
        Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="AdvGen Image Resizer" 
                          FontFamily="Segoe UI" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Foreground="{StaticResource TextPrimaryBrush}"
                          VerticalAlignment="Center" 
                          Margin="24,0,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="24" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800">
                
                <!-- Input Folder Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Input Folder" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Select the folder containing images to resize" 
                                  FontSize="14" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="InputFolderPath" 
                                    Grid.Column="0"
                                    Style="{StaticResource WinUITextBoxStyle}"
                                    Text="No folder selected..."
                                    IsReadOnly="True"/>
                            
                            <Button x:Name="BrowseInputButton" 
                                   Grid.Column="1"
                                   Content="Browse"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Margin="12,0,0,0"
                                   Click="BrowseInputButton_Click"/>
                        </Grid>
                        
                        <TextBlock x:Name="ImageCountText" 
                                  Text="No images found"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Resize Settings Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Resize Settings" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Width" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <TextBox x:Name="WidthBox" 
                                        Text="800" 
                                        Style="{StaticResource WinUITextBoxStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Height" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <TextBox x:Name="HeightBox" 
                                        Text="600" 
                                        Style="{StaticResource WinUITextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                        
                        <CheckBox x:Name="MaintainAspectRatio" 
                                 Content="Maintain aspect ratio" 
                                 IsChecked="True"
                                 Foreground="{StaticResource TextTertiaryBrush}"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel>
                            <TextBlock Text="Resize Mode" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                            <ComboBox x:Name="ResizeModeCombo"
                                     SelectedIndex="0"
                                     Height="40"
                                     Background="{StaticResource InputBackgroundBrush}"
                                     BorderBrush="{StaticResource InputBorderBrush}">
                                <ComboBoxItem Content="Fit (scale to fit within dimensions)"/>
                                <ComboBoxItem Content="Fill (crop to fill dimensions)"/>
                                <ComboBoxItem Content="Stretch (ignore aspect ratio)"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Output Folder Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Output Folder" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Select where to save the resized images" 
                                  FontSize="14" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="OutputFolderPath" 
                                    Grid.Column="0"
                                    Style="{StaticResource WinUITextBoxStyle}"
                                    Text="No folder selected..."
                                    IsReadOnly="True"/>
                            
                            <Button x:Name="BrowseOutputButton" 
                                   Grid.Column="1"
                                   Content="Browse"
                                   Style="{StaticResource SuccessButtonStyle}"
                                   Margin="12,0,0,0"
                                   Click="BrowseOutputButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Progress Section -->
                <Border x:Name="ProgressSection" 
                       Style="{StaticResource CardStyle}"
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Processing Images" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <ProgressBar x:Name="ProcessingProgress" 
                                    Value="0" 
                                    Maximum="100" 
                                    Height="8"
                                    Margin="0,0,0,16"/>
                        
                        <TextBlock x:Name="ProgressText" 
                                  Text="Preparing..."
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Photo Album Generator Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Photo Album Generator" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Generate a beautiful HTML photo album from your images" 
                                  FontSize="14" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Album Title" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <TextBox x:Name="AlbumTitleBox" 
                                        Text="My Photo Album" 
                                        Style="{StaticResource WinUITextBoxStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Template" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="TemplateCombo"
                                         SelectedIndex="0"
                                         Height="40"
                                         Background="{StaticResource InputBackgroundBrush}"
                                         BorderBrush="{StaticResource InputBorderBrush}">
                                    <ComboBoxItem Content="Modern Gallery" Tag="modern-gallery.html"/>
                                    <ComboBoxItem Content="Classic Album" Tag="classic-album.html"/>
                                    <ComboBoxItem Content="Safe Modern Gallery" Tag="safe-modern-gallery.html"/>
                                    <ComboBoxItem Content="Debug Template" Tag="debug-template.html"/>
                                    <ComboBoxItem Content="Template Engine Test" Tag="test_template_engine.html"/>
                                    <ComboBoxItem Content="Michael Leung Gallery" Tag="michael-leung.html"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Album Description" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                            <TextBox x:Name="AlbumDescriptionBox" 
                                    Text="A collection of beautiful memories"
                                    Style="{StaticResource WinUITextBoxStyle}"
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"/>
                        </StackPanel>
                        
                        <!-- Pagination and Image Options -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Photos Per Page" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="PhotosPerPageCombo"
                                         SelectedIndex="2"
                                         Height="40"
                                         Background="{StaticResource InputBackgroundBrush}"
                                         BorderBrush="{StaticResource InputBorderBrush}">
                                    <ComboBoxItem Content="12 photos per page" Tag="12"/>
                                    <ComboBoxItem Content="24 photos per page" Tag="24"/>
                                    <ComboBoxItem Content="36 photos per page" Tag="36"/>
                                    <ComboBoxItem Content="48 photos per page" Tag="48"/>
                                    <ComboBoxItem Content="All photos (no pagination)" Tag="0"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Image Options" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                <CheckBox x:Name="CopyOriginalImagesCheckBox" 
                                         Content="Copy original images with album" 
                                         IsChecked="True"
                                         Foreground="{StaticResource TextTertiaryBrush}"
                                         FontSize="14"
                                         Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="GenerateAlbumButton" 
                           Grid.Column="1"
                           Content="Generate Album"
                           Style="{StaticResource SuccessButtonStyle}"
                           Height="44"
                           Padding="32,0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,12,0"
                           Click="GenerateAlbumButton_Click"/>
                    
                    <Button x:Name="StartProcessingButton" 
                           Grid.Column="2"
                           Content="Start Processing"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Height="44"
                           Padding="32,0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Click="StartProcessingButton_Click"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>